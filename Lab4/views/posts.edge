@layyouts.master({title: "Posts"})
    <h1 class="ui header">Posts</h1>
    <ul class="ui bullet list">
    @each(post in posts)
        <li>
            <a href="{{ route('posts.show', {id: post.id}) }}">
                {{post.title}}
            </a>
        </li>
    @endeach
    </ul>
    <a class="ui button" href="{{ route('posts.create') }}">New</a>
@end
