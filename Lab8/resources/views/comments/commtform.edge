<form class="ui form"
      action="{{ route('comments.store', {postid: post.id}) }}"
      method="post"
>
    {{ csrfField() }}
    <div class="two wide field">
        <label>Your name</label>
        <input type="text" name="poster" size="20" required>
    </div>
    <div class="field">
        <label>Comment</label>
        <textarea name="comment" cols="50" rows="5" required></textarea>
    </div>
    <input type="submit" value="Submit">
</form>